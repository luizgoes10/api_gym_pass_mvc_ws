@model IEnumerable<ApiGymPassMVC.Models.Empresa>

@{
    ViewBag.Title = "ChangeCompany";
}

<h2>Empresas</h2>

<p>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <h4>Pesquisar</h4>
            <hr />
            <div class="form-group">
                @Html.Label("Empresa", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("nmEmpresa", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pesquisar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    </p>

@{
    if (Model != null)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdEmpresa)
                </th>
              
                <th>
                    @Html.DisplayNameFor(model => model.NmEmpresa)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.TelTelefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoolGostei)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VlrMinPreco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VlrMaxPreco)
                </th>
               
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpresa)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.NmEmpresa)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.TelTelefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoolGostei)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrMinPreco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrMaxPreco)
                    </td>
                  
                   
                    <td>
                        @Html.ActionLink("Editar", "ChangeCompanyEdit", new {  id=item.IdEmpresa  }) |
                    </td>
                </tr>
            }
        </table>
        }
    }
